<%- include('partials/header') %>
<h1>This is from template</h1>
<div class="user_list">
	<% users.forEach((user, index) => { %>
		<div class="user_item">
			<h2 class="user_heading"> User No: <%= index + 1 %> </h2>
    		<ul>
				<li>id: <%= user.id %></li>
				<li>name: <%= user.name %></li>
				<li>email: <%= user.email %></li>
				<li>entries: <%= user.entries %></li>
				<li>joined: <%= user.joined %></li>
				</ul>
		</div>
	<% }) %>
</div>
<script type="text/javascript">
	let headings = document.querySelectorAll('.user_heading');
	headings.forEach(coloredHeadings = (item,index) => {
		item.addEventListener('click', (event) => {
			alert("Hello! I am User No: " + (index + 1));
		});
	});
</script>
